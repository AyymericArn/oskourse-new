<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.MainFragment">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="500dp"
            android:layout_height="492dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.81"/>
    <EditText
            android:layout_width="259dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Search a meal..."
            android:ems="10"
            android:id="@+id/searchBar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/optionsButton" app:layout_constraintVertical_bias="0.826"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="params"
            android:layout_width="88dp"
            android:layout_height="45dp"
            android:id="@+id/optionsButton" app:layout_constraintStart_toEndOf="@+id/searchBar"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintVertical_bias="0.568"/>
    <Button
            android:text="del"
            android:layout_width="39dp"
            android:layout_height="52dp"
            android:id="@+id/deleteButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/optionsButton" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.822"/>
    <Spinner
            android:layout_width="395dp"
            android:hint="test"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="158dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/spinnerCountry"/>
</androidx.constraintlayout.widget.ConstraintLayout>