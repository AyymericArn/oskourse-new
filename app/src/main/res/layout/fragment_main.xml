<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.MainFragment">
    <androidx.recyclerview.widget.RecyclerView

            android:layout_width="442dp"
            android:layout_height="492dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchBar"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Search a meal..."
            android:ems="10"
            android:id="@+id/searchBar"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="params"
            android:layout_width="88dp"
            android:layout_height="45dp"
            android:id="@+id/optionsButton" app:layout_constraintStart_toEndOf="@+id/searchBar"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.511" android:layout_marginStart="8dp" android:visibility="gone"/>
    <Button
            android:text="del"
            android:layout_width="39dp"
            android:layout_height="52dp"
            android:id="@+id/deleteButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/optionsButton" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.533" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>